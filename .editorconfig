# EditorConfig is awesome: http://EditorConfig.org
# Uses editorconfig to maintain consistent coding styles

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = crlf
indent_size = 2
indent_style = space
insert_final_newline = true
max_line_length = 80
trim_trailing_whitespace = true

[*.go]
indent_style = tab
tab_width = 4
max_line_length = 0

[*.ps1]
indent_size = 4
indent_style = space
max_line_length = 115

[*.bat]
tab_width = 4
indent_style = tab

[*.sh]
indent_size = 2
indent_style = space
end_of_line = lf

[*.md]
max_line_length = 0

[*.{yml,yaml,json}]
indent_size = 2
indent_style = space

[{Makefile,Makefile.*}]
tab_width = 2
indent_style = tab

[COMMIT_EDITMSG]
max_line_length = 0
